<tal:block
    define="story_object nocall:view/story_object;
            view nocall:story_object/@@story;
            realtasks view/tasklist;">

  <p class="documentDescription">
    <metal:field use-macro="python:story_object.widget('description', mode='view')">
      Description
    </metal:field>
  </p>

  <div tal:attributes="class string:kssattr-atuid-${story_object/UID}">
    <metal:field use-macro="python:story_object.widget('mainText', mode='view')">
      Body text
    </metal:field>
  </div>
  <div tal:replace="structure provider:xm.tasklist.simple" />
</tal:block>