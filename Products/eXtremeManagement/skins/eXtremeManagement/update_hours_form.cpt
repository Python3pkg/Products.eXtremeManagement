<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="eXtremeManagement"
      metal:use-macro="here/main_template/macros/master">

  <head>
      <metal:block fill-slot="top_slot"
                   tal:define="dummy python:request.set('disable_border', 1)" />

      <metal:block fill-slot="css_slot">
        <style type="text/css" media="screen"
               tal:content="string: @import url($portal_url/eXtreme.css);">
        </style>
     </metal:block>
  </head>

  <body>

    <div metal:fill-slot="main"
         tal:define="tasks python:here.portal_catalog.searchResults(portal_type='Task', 
                                                                    review_state=['open', 'in-progress'])">


       <tal:block tal:condition="tasks">
          <h1 i18n:translate="" class="documentFirstHeading">
            Project Management
          </h1>
        
          <p i18n:translate="">
             Update the form below ...blablabla
          </p>

        <form tal:define="errors options/state/getErrors"
              tal:attributes="action string:${here/absolute_url}/${template/id};"
             method="post">

          <table class="listing"
                 border="1" 
                 width="65%"
                 cellpadding="0" 
                 cellspacing="0">

             <tr>
               <th i18n:translate="listingheader_desc">Task Description</th> 
               <th i18n:translate="listingheader_state">Status</th>
               <th i18n:translate="listingheader_estimate">Estimate</th>
               <th i18n:translate="listingheader_actual">Actual</th>
             </tr>

             <tr tal:repeat="task tasks">
                 <td>
                   <a href=""
                      tal:attributes="href task/getURL">
                      <img src="task_icon.gif" /> 
                      <span tal:content="task/Title">Task</span></a></td>

                 <td tal:content="task/review_state">Status</td>
                 <td id="estimate" 
                     tal:content="task/getEstimate">Estimate</td>

                 <td id="actual">
                     <input type="text"
                            size="5"
                            value=""
                            id="input_field_center"
                            tal:attributes="name string:actual-entered-${task/id};
                                            value task/getActual" />
               <input type="hidden"
                      tal:attributes="name string:actual-original-${task/id};
                                      value task/getActual" />
               <input type="hidden"
                      tal:attributes="name string:uid-${task/id};
                                      value task/UID" />

                 </td>
             </tr>
          </table>

          <input type="submit" name="submit" value="submit" />
          <input type="hidden" name="form.submitted" value="1" />

       </form>

      </tal:block>

    </div>
  </body>
</html>


