<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="rXtremeManagement"
      metal:use-macro="here/main_template/macros/master">

  <head>
      <metal:block fill-slot="top_slot">
        <span tal:replace="nothing"
              tal:define="dummy python:request.set('enable_border', 1)" />
      </metal:block>
  </head>

  <body>

    <div metal:fill-slot="main">

        <h1 class="documentFirstHeading" i18n:translate="header_memberinfo">
          Member info
        </h1>

        <div class="documentDescription"
             tal:condition="here/Description"
             tal:content="here/Description">description
        </div>

          <table class="listing"
                 border="1" 
                 width="65%"
                 cellpadding="0" cellspacing="0">

             <tr>
               <th i18n:translate="listingheader_name">Name</th>
               <td tal:content="here/fullname">Name</td>
             </tr>
             <tr>
               <th i18n:translate="listingheader_phone">Phone</th>
               <td tal:content="here/phone">Phone</td>
             </tr>
             <tr>
               <th i18n:translate="listingheader_email">E-mail</th>
               <td tal:content="here/email">E-mail</td>
             </tr>
             <tr>
               <th i18n:translate="listingheader_comments">Comments</th>
               <td tal:content="here/comments">Comments</td>
             </tr>
          </table>


    </div>
  </body>
</html>

