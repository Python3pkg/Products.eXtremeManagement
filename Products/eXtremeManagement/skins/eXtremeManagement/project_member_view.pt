<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="eXtremeManagement"
      metal:use-macro="here/main_template/macros/master">

  <head>
      <metal:block fill-slot="top_slot">
        <span tal:replace="nothing"
              tal:define="dummy python:request.set('enable_border', 1)" />
      </metal:block>

      <metal:block fill-slot="css_slot">
        <style type="text/css" media="screen"
               tal:content="string: @import url($portal_url/eXtreme.css);">
        </style>
      </metal:block>
  </head>

  <body>

    <div metal:fill-slot="main">

        <h1 class="documentFirstHeading" i18n:translate="header_memberinfo">
          Project member info
        </h1>

        <div class="documentDescription"
             tal:condition="here/Description"
             tal:content="here/Description">description
        </div>

          <table class="listing"
                 border="1" 
                 width="65%"
                 cellpadding="0" cellspacing="0">

             <tr>
               <th id="projectmemeber_info_header" 
                   i18n:translate="listingheader_name">Name</th>
               <td tal:content="here/fullname">Name</td>
             </tr>
             <tr>
               <th id="projectmemeber_info_header" 
                   i18n:translate="listingheader_phone">Phone</th>
               <td tal:content="here/phone">Phone</td>
             </tr>
             <tr>
               <th id="projectmemeber_info_header" 
                   i18n:translate="listingheader_email">E-mail</th>
               <td tal:define="emailaddress python:here.email">
                 <a href=""
                    tal:condition="python:here.email"
                    class="link-plain"
                    tal:attributes="href string:mailto:${emailaddress}"
                    title="Send a mail to this user"
                    i18n:attributes="title">
                    <img src="mail_icon.gif"/> 
                    <span tal:content="emailaddress">Email</span>
                 </a>
                 <span tal:condition="not: here/email">....</span>
               </td>
             </tr>
             <tr>
               <th id="projectmemeber_info_header" 
                   i18n:translate="listingheader_comments">Comments</th>
               <td>
                 <span tal:condition="python:here.comments" 
                       tal:content="here/comments">Comments</span>
                 <span tal:condition="not: here/comments">....</span>
             </tr>
          </table>


    </div>
  </body>
</html>

