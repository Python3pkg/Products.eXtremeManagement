#portal-column-one{
   width: 200px;
}

.header_iteration_project_overview {
    font-weight: bold;
    font-size: 15px;
}

.header_iteration {
    border-right: none;
}

.storyTitle_project_overview {
    font-weight: bold;
    text-decoration: underline;
}

.storyTitle_iteration_overview {
    font-weight: bold;
}

.progress_details {
    text-align: center;
    padding: 5px;
}

.progress_bar {
    border: 1px solid #8CACBB;
    width: 100px;
    height: 10px;
    text-align: left;
}

.tasks {
    text-align: center;
}

.listStories {
    padding-bottom: 5px;
}

.iteration-state {
    text-align: right;
    border-left: none;
}

#totalTasks {
    font-weight: bold;
    text-align: right;
}

.td-story-title {
    text-align: left !important;
}

.td-center {
    text-align: center !important;
}

.list-in-iteration {
    text-align: right;
}

.list_iterations div {
    line-height: 1.5em;
    margin: 0.5em 0 0 1.5em;
    padding: 0;
}

.customer_info_header {
   text-align: right;
   font-weight: bold !important;
   width: 20%;
}

.iteration-description {
    color: &dtml-discreetColor;;
    font-weight: normal;
}

#task_header {
    text-align: right;
    font-weight: bold;
    width: 40%;
}

#iteration-item {
    padding: 0px 0px 0px 40px;
}

.iteration-table {
    margin-left: 20px;
}


/* ----project administration view ---- */


.project_title {
    font-weight: bold;
}

.project_iterations {
    margin: 10px 0px 0px 30px;
}

.td-project {
    padding-bottom: 10px !important;
}

.project_description {
    margin: 0.3em 0 1em 1.5em;
    color: &dtml-discreetColor;;
}

.iteration-table-header th {
    border: none;
    text-align: center;
}

.project-list-info {
    padding:0px 0px 5px 0px;
}

.project-list-info td {
    border: none;
    text-align: center;
}

.header_projectmember_listing th {
    font-weight: bold !important;
}

/* ----end project administration view ---- */


.listing th {
    padding-top: 2px;
    padding-bottom: 2px;
}

.booking_title {
    font-weight: bold;
}

.booking_description {
    margin-left: 20px;
}


/* ---- hours view ---- */

.hours-comments {
    font-weight: bold;
}

.hours-comments textarea {
    margin-right: 15px; 
    margin-bottom: 15px;
}

.comments-title {
    padding-top: 15px;
}

/* ---- end hours view ---- */

