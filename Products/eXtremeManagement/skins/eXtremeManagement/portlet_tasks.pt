<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="eXtremeManagement">

<body>

<!-- The open tasks box -->

<div metal:define-macro="portlet"
     tal:define="DateTime python:modules['DateTime'].DateTime;
                 results python:here.getTasks();"
     tal:condition="results">
 
    <div class="portlet" id="portlet-open-tasks">

        <h5 i18n:translate="box_open_tasks">Open tasks</h5>

        <div class="portletBody">
            <tal:block repeat="item results">
            <div tal:define="oddrow repeat/item/odd;"

                 tal:attributes="class python:test(oddrow, 'portletContent odd', 'portletContent even')">

                    <a href="#"
                       class="marker"
                       tal:attributes="href item/getURL"> 

                        <img src="" alt="" height="16" width="16"
                             tal:attributes="src string:${here/portal_url}/${item/getIcon};" />

                        <span tal:replace="item/Title">
                        Title
                        </span>
                    </a>  

                    <div class="portletDetails"
                         tal:define="moddate item/ModificationDate;"
                         tal:content="python:here.toPortalTime(moddate)">July 7, 08:11</div>
            </div>
            </tal:block>

        </div>
    </div>
</div>
</body>
</html>
