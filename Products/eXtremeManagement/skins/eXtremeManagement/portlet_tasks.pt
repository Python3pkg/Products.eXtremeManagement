<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="eXtremeManagement">

<body>

<link href="eXtreme.css" type="text/css" rel="stylesheet" />

<!-- The open tasks box -->

<div metal:define-macro="portlet"
     tal:define="DateTime python:modules['DateTime'].DateTime;
                 results python:here.getTasks();">
 
    <div class="portlet" id="portlet-project-admininstration">

        <h5 i18n:translate="project_administration">Project administration</h5>

        <div class="portletBody">
            <tal:block repeat="item results">
            <div tal:define="oddrow repeat/item/odd;"
                 tal:attributes="class python:test(oddrow, 'portletContent odd', 'portletContent even')">

                    <a href="#"
                       class="marker"
                       tal:attributes="href item/absolute_url"> 

                        <img src="" alt="" height="16" width="16"
                             tal:attributes="src string:${here/portal_url}/${item/getIcon};" />

                        <span tal:replace="item/Title">
                        Title
                        </span>
                    </a>  

                    <div class="portletDetails"
                         tal:define="moddate item/ModificationDate;"
                         tal:content="python:here.toPortalTime(moddate)">July 7, 08:11</div>
            </div>
            </tal:block>
            
            <div style="padding:5px;">
               <img src="" 
                    alt="" 
                    height="16" 
                    width="16"
                    tal:attributes="src string:${here/portal_url}/tasks_links_icon.gif" />
                  <a href=""
                     i18n:translate="header_time_registration"
                     tal:attributes="href string:${portal_url}/update_hours_form">Time registration
                   </a> 
            </div>  
            <div style="padding:5px;">
               <img src="" 
                    alt="" 
                    height="16" 
                    width="16"
                    tal:attributes="src string:${here/portal_url}/tasks_links_icon.gif" />
                  <a href="" 
                     i18n:translate="project_administration" 
                     tal:attributes="href string:${portal_url}/project_administration">Project administration
                  </a>
            </div> 

        </div>
        
    </div>
</div>
</body>
</html>
