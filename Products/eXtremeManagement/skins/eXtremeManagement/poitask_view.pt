<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="eXtremeManagement">
  <body>
    
    <div metal:fill-slot="main">
      <div metal:use-macro="context/task_view/macros/body">

        <div metal:fill-slot="after-description">
          Related issues:
          <ul>
            <tal:repeat repeat="issue context/getIssues">
              <li tal:define="state python:wtool.getInfoFor(issue,
                              'review_state')">
                <a tal:attributes="href issue/absolute_url;
                                 class string:state-${state}"
                   tal:content="python:'#%s: %s' % (issue.getId(), issue.title_or_id())">
                  My issue
                </a>
                (<span tal:replace="state" />)
              </li>
            </tal:repeat>
          </ul>
        </div>

      </div>
    </div>

  </body>
</html>
