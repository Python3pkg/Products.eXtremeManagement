<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="eXtremeManagement"
      metal:use-macro="here/main_template/macros/master">

  <head>
    <metal:block fill-slot="top_slot"
		 tal:define="dummy python:request.set('disable_border', 1)" />
  </head>

  <body>

    <tal:main metal:fill-slot="main">

      <p tal:condition="not:request/previous|nothing">
        <tal:goto i18n:translate="go_to">
          Go to
        </tal:goto> <a
        tal:attributes="href
        string:${template/absolute_url}?previous=1"
        i18n:translate="previous-month">previous month</a>.
      </p>
      <p tal:condition="request/previous|nothing">
        <tal:back i18n:translate="back_to">
          Back to
          </tal:back> <a
          tal:attributes="href
          string:${template/absolute_url}"
          i18n:translate="current-month">current month</a>.
      </p>
      <tal:block tal:define="current_path python:'/'.join(context.getPhysicalPath());
			     bookings python:context.getBookings()"
		 tal:condition="bookings">
	<h1 i18n:translate="heading-bookings">Bookings</h1>
	
	<table border="1" 
	       class="listing" 
	       with="100%">
	  <tr>
	    <th i18n:translate="listingheader-date">
	      Date
	    </th>
	    <th i18n:translate="listingheader-task">
	      Task
	    </th>
	    <th i18n:translate="listingheader-booking">
	      Booking
	    </th>
	    <th i18n:translate="listingheader-time">
	      Time
	    </th>
	  </tr>
	  
	  <tr tal:repeat="booking bookings">
	    <td>
	      <span tal:content="python:context.toLocalizedTime(booking.getBookingDate(), long_format=0)">
		2006-01-25
	      </span>
	      <br />
	      <span class="discreet"
		    tal:content="booking/aq_parent/aq_parent/aq_parent/aq_parent/Title"/>
	    </td>
	    <td>
	      <a tal:attributes="href string:${booking/aq_parent/absolute_url}"
		 class="booking_title"
		 tal:content="booking/aq_parent/Title" />
	    </td>
	    <td>
	      <a tal:attributes="href string:${booking/absolute_url}"
		 class="booking_title"
		 tal:content="booking/Title" />
	      <div class="booking_description" 
		   tal:content="booking/Description" />
	    </td>
	    <td tal:content="booking/getActualHours">
	      4:45
	    </td>
	  </tr>
	</table>
      </tal:block>
    </tal:main>
  </body>
</html>

