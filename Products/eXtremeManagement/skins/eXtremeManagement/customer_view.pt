<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      i18n:domain="eXtremeManagement">
  <metal:block use-macro="here/global_defines/macros/defines" />



  <body>
  
    <metal:block metal:define-macro="header">
      <h1 class="documentFirstHeading" i18n:translate="header_customers">
          Customer info
      </h1>
      <div class="documentDescription"
           tal:condition="here/Description"
           tal:content="here/Description">description
      </div>
      <link REL="stylesheet" TYPE="text/css" href="eXtreme.css" />
    </metal:block>

    <metal:block metal:define-macro="body">
      
          <table class="listing"
                 border="1" 
                 width="80%"
                 cellpadding="0" 
                 cellspacing="0">

             <tr>
               <th id="customer_info_header" 
                   i18n:translate="listingheader_name">Fullname</th> 
               <td tal:content="here/getName">Fullname</td>
             </tr>
             <tr>
               <th id="customer_info_header" 
                   i18n:translate="listingheader_address">Address</th>
               <td tal:content="here/getAddress">Address</td>
             </tr>
             <tr>
               <th id="customer_info_header" 
                   i18n:translate="listingheader_zipCode">Zip code</th>
               <td tal:content="here/getZipCode">Zip code</td>
             </tr>
             <tr>
               <th id="customer_info_header" 
                   i18n:translate="listingheader_city">City</th>
               <td tal:content="here/getCity">City</td>
             </tr>
             <tr>
               <th id="customer_info_header" 
                   i18n:translate="listingheader_country">Country</th>
               <td tal:content="here/getCountry">Country</td>
             </tr>
             <tr>
               <th id="customer_info_header" 
                   i18n:translate="listingheader_phone">Phone</th>
               <td tal:content="here/getPhone">Phone</td>
             </tr>
             <tr>
               <th id="customer_info_header" 
                   i18n:translate="listingheader_fax">Fax</th>
               <td>
                 <span tal:condition="here/getFax" 
                       tal:content="here/getFax">Fax</span>
                 <span tal:condition="not: here/getFax">....</span>
               </td>
             </tr>
             <tr>
               <th id="customer_info_header" 
                   i18n:translate="listingheader_website">Website</th>
               <td>
                 <a href=""
                    tal:condition="here/getWebsite"
                    tal:attributes="href here/getWebsite"
                    tal:content="here/getWebsite"
                    title="Visit the website"
                    i18n:translate="title">
                 </a>
                 <span tal:condition="not: here/getWebsite">....</span>
               </td>
             </tr>
             <tr>
               <th id="customer_info_header" 
                   i18n:translate="listingheader_comments">Comments</th>
               <td>
                 <span tal:condition="here/Description" 
                       tal:content="here/Description">Comments</span>
                 <span tal:condition="not: here/Description">....</span>
               </td>
             </tr>
          </table>


          <div tal:define="projMembers python:here.contentValues('ProjectMember')" 
               tal:condition="projMembers">

            <h1 i18n:translate="header_project_members">Project members</h1>

            <table class="listing"
                   cellspacing="0" cellpadding="0"
                   width="100%"
                   border="1">

              <thead>
                <tr>
                  <th id="header_projectmemeber_listing" 
                      i18n:translate="listingheader_name">name</th>
                  <th id="header_projectmemeber_listing" 
                      i18n:translate="listingheader_phone">phone</th>
                  <th id="header_projectmemeber_listing" 
                      i18n:translate="listingheader_email">email</th>
                </tr>
              </thead>
 
              <tbody>
                <tr tal:repeat="member projMembers">
                  <td tal:condition="python: test(member.getFullname == '',0,1)">
                    <a href=""
                       tal:attributes="href string:${member/absolute_url}">
                       <img src="user.gif" /> <span tal:content="member/getFullname">Name</span></a></td>
                  <td tal:content="member/getPhone">Phone</td>
                  <td>
                    <a href=""
                       class="link-plain"
                       tal:attributes="href string:mailto:${member/getEmail}"
                       title="Send a mail to this user"
                       i18n:attributes="title">
                       <img src="mail_icon.gif"/> 
                       <span tal:content="member/getEmail">Email</span>
                    </a>
                  </td>

                </tr>
              </tbody>
            </table>             
          </div>

    </metal:block>
    <metal:block metal:define-macro="folderlisting" />
  </body>
</html>

