<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="eXtremeManagement">

    <body>
    
    <!-- The 'my projects' box -->
    <div metal:define-macro="portlet"
         tal:define="view context/@@myprojects;
                     results view/projectlist;"
         tal:condition="python:results">
        <dl class="portlet" id="portlet-my-projects">
            <dt class="portletHeader"
                i18n:translate="box_my_projects">
                My Projects
            </dt>
            <tal:block tal:repeat="item results">
            <dd tal:define="oddrow repeat/item/odd;
                            end repeat/item/end;
                            itemClass python:test(end, 'portletItemLast', 'portletItem');
                            class python:itemClass + test(oddrow, ' even', ' odd')"
                tal:attributes="class class">
              <div class="visualIcon contenttype-project">
                <div class="visualIconPadding">
                  <a tal:attributes="href item/getURL">
                    <span tal:replace="item/Title" />
                  </a>
                </div>
              </div>
            </dd>
            </tal:block>
        </dl>
    </div>
    </body>
</html>
 


