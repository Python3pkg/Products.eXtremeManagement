<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

    <body>
    
    <!-- The 'my projects' box -->
    <div metal:define-macro="portlet"
         tal:define="results python:portal.getMyProjects();"
         tal:condition="python:results">
        <dl class="portlet" id="portlet-my-projects">
            <dt class="portletHeader"
                i18n:translate="box__my_projects">
                My Projects
            </dt>
            <tal:block tal:repeat="obj results">
            <dd tal:define="oddrow repeat/obj/odd;
                            end repeat/obj/end;
                            itemClass python:test(end, 'portletItemLast', 'portletItem');
                            class python:itemClass + test(oddrow, ' even', ' odd')"
                tal:attributes="class class">
    
                <a tal:attributes="href obj/absolute_url">
                    <img alt=""
                            height="16" 
                            width="16"
                            tal:attributes="src string:${here/portal_url}/${obj/getIcon};" />
                    <span tal:replace="python:test(obj.Title(), obj.Title(), obj.getId())"> 
                        ECP 
                    </span>
                </a>
            </dd>
            </tal:block>
        </dl>
    </div>
    </body>
</html>
 


