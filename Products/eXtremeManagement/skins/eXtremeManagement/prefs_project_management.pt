<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="eXtremeManagement">

<metal:head fill-slot="top_slot"
            tal:define="dummy python:request.set('disable_border',1)" />

<div metal:fill-slot="main">

    <form action="XPSearch_result"
          method="get"
          name="form"
          tal:define="open_tasks python:here.portal_catalog.searchResults(portal_type='Task',
                                                                          review_state='open',);
                      closed_tasks python:here.portal_catalog.searchResults(portal_type='Task',
                                                                            review_state='completed',);
                      projects python:here.portal_catalog.searchResults(portal_type='Project',);">

        <fieldset>

            <legend i18n:translate="legend_search_terms">Search Terms</legend>


          <div class="field">
            <label i18n:translate="label_project">Select project</label>
              <div i18n:translate="help_project_creation"
                   class="formHelp">
                Select a project.
              </div>

                <select tal:attributes="tabindex tabindex/next;">
                   <option value="" selected="selected" i18n:translate="select_project">Select project</option>
                   <tal:block tal:repeat="project projects">
                     <option value="None"
                             tal:attributes="value project"
                             tal:content="project/Title">
                     </option>
                   </tal:block>
                </select>
          </div>

          <div class="field">
            <label i18n:translate="label_task">Select task</label>
              <div i18n:translate="help_task_creation"
                   class="formHelp">
                Select the tasks. You can choose from open or completed tasks.
              </div>

                <select tal:attributes="tabindex tabindex/next;">
                   <option value="" selected="selected" i18n:translate="select_task">Select task</option>
                   <tal:block tal:repeat="task open_tasks">
                     <option value="None"
                             tal:attributes="value task"
                             tal:content="task/Title">
                     </option>
                   </tal:block>
                </select>
          </div>

          <div class="field">
            <label i18n:translate="label_assignee">Select assignee</label>
              <div i18n:translate="help_assignee_creation"
                   class="formHelp">
                Select an assignee.
              </div>

                <select tal:attributes="tabindex tabindex/next;">
                   <option value="" selected="selected" i18n:translate="select_assignee">Select assignee</option>
                </select>
          </div>

