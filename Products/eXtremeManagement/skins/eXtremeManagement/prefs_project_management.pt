<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="eXtremeManagement"
      metal:use-macro="here/main_template/macros/master">

  <head>
      <metal:block fill-slot="top_slot"
                   tal:define="dummy python:request.set('disable_border', 1)" />
  </head>

  <body>

    <div metal:fill-slot="main"
         tal:define="tasks python:here.portal_catalog.searchResults(portal_type='Task', 
                                                                    review_state=['open', 'in-progress'])">


       <tal:block tal:condition="tasks">
          <h1 i18n:translate="" class="documentFirstHeading">
            Project Management
          </h1>
        
          <p i18n:translate="">
             Update the form below ...blablabla
          </p>

        <form action=""
              name="update_actual_time"
              method="post"
              tal:attributes="action here/absolute_url">

          <table class="listing"
                 border="1" 
                 width="65%"
                 cellpadding="0" 
                 cellspacing="0">

             <tr>
               <th i18n:translate="listingheader_task_desc">Task Description</th> 
               <th i18n:translate="listingheader_state">Status</th>
               <th i18n:translate="listingheader_estimate">Estimate</th>
               <th i18n:translate="listingheader_actual">Actual</th>
             </tr>

             <tr tal:repeat="task tasks">
                 <td>
                   <a href=""
                      tal:attributes="href task/getURL">
                      <img src="task_icon.gif" /> 
                      <span tal:content="task/Title">Task</span></a></td>

                 <td tal:content="task/review_state">Status</td>
                 <td id="estimate" 
                     tal:content="task/getEstimate">Estimate</td>

                 <td id="actual">
                     <input type="text"
                            size="5"
                            value=""
                            id="input_field_center"
                            tal:attributes="name string:entered-actual-${task/id};
                                            value task/getActual" />
               <input type="hidden"
                      tal:attributes="name string:original-actual-${task/id};
                                      value task/getActual" />
               <input type="hidden"
                      tal:attributes="name string:uid-${task/id};
                                      value task/UID" />

                 </td>
             </tr>
          </table>

          <input class="context"
                 tabindex=""
		 type="submit"
		 name="prefs_users_manage:method"
		 value="Apply Changes"
		 i18n:attributes="value"
		 tal:attributes="tabindex tabindex/next;" />
       </form>

      </tal:block>

    </div>
  </body>
</html>


