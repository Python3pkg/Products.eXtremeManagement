                <input type="hidden" name="created_usage" value="range:min" />

            <div class="formControls">
            <input type="hidden" name="portal_type" value="Task" />
            <input type="hidden" name="portal_type" value="Project" />
                <input class="context"
                       tabindex=""
                       type="submit"
                       name="submit"
                       value="Search"
                       i18n:attributes="value"
                       tal:attributes="tabindex tabindex/next;"/>
            </div>
        </fieldset>
    </form>

</div>
