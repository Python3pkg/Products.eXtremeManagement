<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="eXtremeManagement"
      metal:use-macro="here/main_template/macros/master">

  <head>
    <metal:block fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border', 1)" />
  </head>

  <body>

    <tal:main metal:fill-slot="main">

      <p tal:condition="not:request/previous|nothing">
        <tal:goto i18n:translate="go_to">
          Go to
        </tal:goto>
        <a tal:condition="not: request/memberid|nothing"
           tal:attributes="href string:${context/absolute_url}/${template/id}?previous=1"
           i18n:translate="previous-month">previous month</a>
        <a tal:condition="request/memberid|nothing"
           tal:attributes="href string:${context/absolute_url}/${template/id}?previous=1&amp;memberid=${request/memberid}"
           i18n:translate="previous-month">previous month</a>
      </p>
      <p tal:condition="request/previous|nothing">
        <tal:back i18n:translate="back_to">
          Back to
        </tal:back>
        <a tal:condition="not: request/memberid|nothing"
           tal:attributes="href string:${context/absolute_url}/${template/id}"
           i18n:translate="current-month">current month</a>
        <a tal:condition="request/memberid|nothing"
           tal:attributes="href string:${context/absolute_url}/${template/id}?memberid=${request/memberid}"
           i18n:translate="current-month">current month</a>
      </p>
      <tal:block tal:define="current_path python:'/'.join(context.getPhysicalPath());
                             view context/@@monthbooking_details;
                             main view/main;
                             bookings view/bookinglist;
                             memberid request/memberid|string:"
                 tal:condition="bookings">
        <h1 i18n:translate="heading-bookings">Bookings</h1>

        <table border="0"
               class="listing"
               >
          <tr>
            <th class="nosort" i18n:translate="listingheader-date">
              Date
            </th>
            <th class="nosort" i18n:translate="listingheader-task">
              Task
            </th>
            <th tal:condition="python:memberid == 'all'"
                class="nosort" i18n:translate="listingheader-member">
              Assigned to
            </th>
            <th class="nosort" i18n:translate="listingheader-booking">
              Booking
            </th>
            <th class="nosort" i18n:translate="listingheader-time">
              Time
            </th>
            <th class="nosort" i18n:translate="listingheader-cumulative-time">
              Cumulative Time
            </th>
          </tr>

          <tr tal:repeat="booking bookings">
            <td>
              <span tal:content="booking/day_of_week" />
              <span tal:content="booking/booking_date" />
              <br />
              <span class="discreet"
                    tal:content="booking/project_title" />
            </td>
            <td>
              <a tal:attributes="href booking/task_url"
                 class="booking_title"
                 tal:content="booking/task_title" />
            </td>
            <td tal:condition="python:memberid == 'all'">
              <a tal:attributes="href string:${context/absolute_url}/${template/id}/booking_details?memberid=${booking/creator}"
                 tal:content="booking/creator">
              </a>
            </td>
            <td>
              <a tal:attributes="href booking/booking_url"
                 class="booking_title"
                 tal:content="booking/booking_title" ></a>
              <div class="booking_description"
                   tal:content="structure booking/booking_description" />
            </td>
            <td tal:content="booking/booking_hours" />
            <td>
              <font tal:omit-tag="python:booking['raw_task_cumulative_time'] != booking['raw_task_time']"
                    color="red">
                <span tal:replace="booking/task_cumulative_time" /> / 
                <span tal:replace="booking/task_time" />
              </font>
            </td>
          </tr>
          <tr id="booking-details-total" >
            <th i18n:translate="listingheader-total"
                tal:attributes="colspan python:(memberid == 'all') and 4 or 3"
                colspan="3">
              Total
            </th>
            <th tal:content="main/total" />
            <th></th>
          </tr>
        </table>
      </tal:block>

    </tal:main>
  </body>
</html>
